@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<h1>Berlin</h1>


<div class="button-container">
    <a asp-page="./Map/Berlin" class="btn-lg btn-info active" disabled>All</a>
    <a asp-page="./Map/FreeToilets" class="btn-lg btn-info">costless Toilets</a>
    <a asp-page="./Map/WithChangingTable" class="btn-lg btn-info">Toilets with Changing Table</a>
    <a asp-page="./Map/WithHandicappedAccessible" class="btn-lg btn-info">Toilets with Handicapped Access</a>
</div>

<div id="myMap"></div>
<table id="table" class="table table-striped">
    <tbody>
        @foreach (var standorte in Model.LocationsBerlin)
        {

            <tr>
                <td class="data-latitude">@standorte.Latitude</td>
                <td class="data-longitude">@standorte.Longitude</td>
                <td class="data-street">@standorte.Street</td>
                <td class="data-postalCode">@standorte.PostalCode</td>
                <td class="data-price">@standorte.Price</td>
                <td class="data-label">@standorte.LabelId</td>
                <td class="data-handycappedAccessible">@standorte.IsHandycappedAccessible</td>
            </tr>
        }
    </tbody>
</table>


