@page
@model PlaceToPeeRazorPage.Pages.Info.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Toilet</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Toilet.Street" class="control-lable"></label>
        <input asp-for="Toilet.Street" class="form-control" />
        <span asp-validation-for="Toilet.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.PostalCode" class="control-lable"></label>
        <input asp-for="Toilet.PostalCode" class="form-control" />
        <span asp-validation-for="Toilet.PostalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.Price" class="control-lable"></label>
        <input asp-for="Toilet.Price" class="form-control" />
        <span asp-validation-for="Toilet.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.City" class="control-lable"></label>
        <input asp-for="Toilet.City" class="form-control" />
        <span asp-validation-for="Toilet.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.HasChangingTable" class="control-lable"></label>
        <input asp-for="Toilet.HasChangingTable" class="form-control" />
        <span asp-validation-for="Toilet.HasChangingTable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.IsHandycappedAccessible" class="control-lable"></label>
        <input asp-for="Toilet.IsHandycappedAccessible" class="form-control" />
        <span asp-validation-for="Toilet.IsHandycappedAccessible" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.Latitude" class="control-lable"></label>
        <input asp-for="Toilet.Latitude" class="form-control" />
        <span asp-validation-for="Toilet.Latitude" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Toilet.Longitude" class="control-lable"></label>
        <select asp-for="Toilet.Longitude" class="form-control"></select>
        <span asp-validation-for="Toilet.Longitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Toilet" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

